<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e9e7ef"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:tag="dynamic_askleave_type_start_tv"
            android:textColor="#808080"
            android:textSize="15sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="aaaaa"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:tag="dynamic_askleave_type_in_et"
            android:textSize="11sp"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:tag="dynamic_askleave_type_iv"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e9e7ef"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:tag="dynamic_askleave_starttime_start_tv"
            android:textColor="#808080"
            android:textSize="15sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:tag="dynamic_askleave_starttime_in_et"
            android:textSize="11sp"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:tag="dynamic_askleave_starttime_iv"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e9e7ef"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:tag="dynamic_askleave_endtime_start_tv"
            android:textColor="#808080"
            android:textSize="15sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:tag="dynamic_askleave_endtime_in_et"
            android:textSize="11sp"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:tag="dynamic_askleave_endtime_iv"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e9e7ef"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="top"
        android:padding="5dp"
        android:tag="dynamic_askleave_desc_et"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#21a675"
                android:gravity="center"
                android:tag="dynamic_askleave_confirm_tv"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>